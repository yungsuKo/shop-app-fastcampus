        <input type='file' name='file' multiple>
        <input type='submit' value='upload'>
    </div>
</form>

<script>
    Dropzone.options.dropzoneForm = {
        acceptedFiles: "image/*",
        init : function(){
            this.on("queuecomplete", function(file){
                setTimeout(function() {
                    location.reload()
                }, 500);
            })
        }
    }
</script>


<%- include('../partials/header') %>

<div class='d-flex justify-content-between align-items-center'>
    <h2>Products</h2>
    <a href='/admin/products/add-product' class='btn btn-primary'>+</a>
</div>
<% if (products.length > 0) { %>
 <table class='table table-striped'>
    <thead>
        <tr class='home'>
            <th>Product</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach((product) => { %>
            <tr>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td><%= product.category %></td>
                <td><img src='/product-images/<%= product._id %>/<%= product.image %>' style='width: 100%;'></td>
                <td><a href='/admin/products/<%= product._id %>/edit'>edit</a></td>
                <td>
                    <form action='/admin/products/<%= product._id %>?_method=delete' method='post'>
                        <button type='submit' class='btn btn-primary'>delete</button>
                    </form>
                </td>
            </tr>

        <% }) %>
    </tbody>
 </table>
<% } %>

<%- include('../partials/footer') %>